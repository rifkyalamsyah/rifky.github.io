---
import Button from '@components/about/BtnPrimary.astro';
const { className, title, desc, link, copy, target, fs } = Astro.props;
---

<div
  class=`${className} bg-white dark:bg-dark-950 border border-dark-100/60 dark:border-dark-800/30 p-8 rounded-xl duration-1000`
>
  <h1 class='text-2xl text-black dark:text-white'>
    {title}
  </h1>
  <p class=`${fs} text-dark-500 dark:text-dark-300`>
    {desc}
  </p>
  <div class='flex mt-3'>
    <Button href={link} name={copy} target={target} />
  </div>
</div>
