---
import { Dropdown, DropdownItems } from 'astro-navbar';
const { name } = Astro.props;
---

<li
  class='lg:px-4 lg:py-1 lg:mr-2 lg:hover:bg-dark-100/80 lg:dark:hover:bg-dark-950 lg:hover:rounded-full duration-500'
>
  <Dropdown class='group'>
    <button class='flex items-center gap-1 w-full lg:w-auto'>
      <span
        class='text-dark-600 dark:text-dark-300 hover:text-dark-950 dark:hover:text-white text-3xl lg:text-base'
        >{name}</span
      >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        fill='none'
        viewBox='0 0 24 24'
        stroke-width='3'
        stroke='currentColor'
        class='w-3 h-3 mt-0.5 group-open:rotate-180'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='M19.5 8.25l-7.5 7.5-7.5-7.5'></path>
      </svg>
    </button>
    <DropdownItems>
      <div class='mt-2 lg:mt-0 lg:absolute w-full lg:w-48 lg:top-14 z-10'>
        <div
          class='px-4 lg:px-2 py-4 lg:py-2 bg-white dark:bg-dark-950 rounded-md shadow border dark:border-dark-900 flex flex-col'
        >
          <ul class='flex flex-col gap-2 lg:gap-0'>
            <slot />
          </ul>
        </div>
      </div>
    </DropdownItems>
  </Dropdown>
</li>
