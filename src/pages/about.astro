---
import Layout from '@layouts/MainLayout.astro';

// SEO
const title = 'About - Rifky Alamsyah';
const seoDesc =
  'UI Designer & Front-End Developer, I love solving problems and implementing ideas by design.';
const ogImage = 'https://rifkyalamsyah.github.io/images/og/og-rifky.png';
const url = 'https://rifkyalamsyah.github.io/about';
const domain = 'rifkyalamsyah.github.io/about';
const keywords =
  'rifky, rifky alamsyah, ui designer , ui/ux designer, web designer, frontend developer, webflow developer, freelancer, rifky alamsyah freelance designer, rifky alamsyah ui designer, rifky alamsyah ui/ux designer, rifky alamsyah web designer, rifky alamsyah webflow developer, rifky alamsyah frontend developer';
