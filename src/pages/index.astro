---
import Layout from '@layouts/MainLayout.astro';
import Hi from '@components/Hi.astro';
import Info from '@components/Info.astro';

// SEO
const title = 'Rifky Alamsyah - Porto';
const seoDesc = 'UI Designer & Frontend Dev';
---

<Layout {title} {seoDesc}>
  <main class='mt-auto'>
    <div class='relative h-full w-full bg-white'></div>
  </main>
  <section class='py-20'>
    <div class='container mx-auto'>
      <Hi />
      <h1 class='text-center text-3xl sm:text-5xl'>
        <span
          class='bg-gradient-to-r from-wood-300 to-wood-900 bg-clip-text text-transparent'
          >I'm
        </span>
        Rifky Alamsyah
      </h1>
      <Info />
    </div>
  </section>
</Layout>
