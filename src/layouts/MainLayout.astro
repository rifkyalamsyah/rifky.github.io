---
import Head from '@layouts/MainHead.astro';
import Nav from '@components/navbar/Navbar.astro';
import Footer from '@components/Footer.astro';

import '@fontsource-variable/dm-sans';

const { title, seoDesc, ogImage, url, domain, keywords } = Astro.props;
---

<html lang='en' class='bg-zinc-50'>
  <Head
    title={title}
    seoDesc={seoDesc}
    ogImage={ogImage}
    url={url}
    domain={domain}
    keywords={keywords}
  />
  <body
    class='dark:bg-wood-900 duration-1000 dark:text-white flex flex-col content-between min-h-screen'
  >
    <Nav />
    <slot />
    <Footer />
    <style is:global>
      html {
        font-family: 'DM Sans Variable', sans-serif;
      }
    </style>
  </body>
</html>
